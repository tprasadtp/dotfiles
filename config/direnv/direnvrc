# Poetry
layout_poetry() {
  # Check Poetry
  if ! has poetry; then
    log_error 'poetry not installed or not in PATH!'
    return 2
  fi

  # Check pyproject.toml
  if [[ ! -f pyproject.toml ]]; then
    log_error 'No pyproject.toml found. Use `poetry new` or `poetry init` to create one first.'
    return 2
  fi


  # create venv if it doesn't exist
  poetry run true

  export VIRTUAL_ENV=$(poetry env info --path)
  export POETRY_ACTIVE=1
  # Add Virtualenv bins to PATH
  PATH_add "$VIRTUAL_ENV/bin"
}

layout_anaconda() {
  path_add "${HOME}/Tools/miniconda3/bin/"
    
  if [ -n "$1" ]; then
    # Explicit environment name from layout command.
    local env_name="$1"
    source conda activate ${env_name}
  elif (grep -q name: environment.yml); then
    # Detect environment name from `environment.yml` file in `.envrc` directory
    conda activate $(grep name: environment.yml | sed -e 's/name: //' | cut -d "'" -f 2 | cut -d '"' -f 2)
  else
    (>&2 echo No environment specified);
    exit 1;
  fi;
}

# Check if required env vars are undefined
check_env()
{
  local ret=0
  for var in "$@"; do
    if [[ -n $var ]]; then
      echo "$var is missing"
      ret=1
    fi
  done
  return $ret
}



