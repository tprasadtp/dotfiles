{
  "Shellscript-Header": {
    "prefix": [
      "shellscript"
    ],
    "body": [
      "#!/usr/bin/env bash",
      "#  Copyright (c) \\$CURRENT_YEAR. Prasad Tengse",
      "#  ",
      "#",
      "set -eo pipefail",
      "readonly SCRIPT=\\$(basename \"\\$0\")",
      "readonly DIR=\"\\$(pwd)\"",
      "readonly YELLOW=\\$'\\e[33m'",
      "readonly GREEN=\\$'\\e[32m'",
      "readonly RED=\\$'\\e[31m'",
      "readonly NC=\\$'\\e[0m'",
      "",
      "",
      "function display_usage()",
      "{",
      "#Prints out help menu",
      "cat <<EOF",
      "Bash script to",
      "",
      "Usage: \\${YELLOW}\\${SCRIPT}   [options]\\${NC}",
      "[-h --help]            [Display this help message]",
      "EOF",
      "}",
      "",
      "",
      "function print_info()",
      "{",
      "  printf \"‣ %s \\n\" \"\\$@\"",
      "}",
      "",
      "function print_success()",
      "{",
      "  printf \"%s✔ %s %s\\n\" \"\\${GREEN}\" \"\\$@\" \"\\${NC}\"",
      "}",
      "",
      "function print_warning()",
      "{",
      "  printf \"%s⚠ %s %s\\n\" \"\\${YELLOW}\" \"\\$@\" \"\\${NC}\"",
      "}",
      "",
      "function print_error()",
      "{",
      "   printf \"%s✖ %s %s\\n\" \"\\${RED}\" \"\\$@\" \"\\${NC}\"",
      "}",
      "",
      "function main()",
      "{",
      "  # No args just run the setup function",
      "  if [[ \\$# -eq 0 ]]; then",
      "    print_error \"No Arguments specified!\"",
      "    display_usage;",
      "    exit 1",
      "  fi",
      "",
      "  while [[ \\${1} != \"\" ]]; do",
      "    case \\${1} in",
      "      -h | --help )           display_usage;exit 0;;",
      "      * )                     display_error \"Invalid argument(s). See usage below.\";display_usage;;",
      "    esac",
      "    shift",
      "  done",
      "",
      "",
      "}",
      "",
      "main \"\\$@\"",
      ""
    ],
    "description": "Basic shellscript template...",
    "scope": "shellscript"
  }
}
