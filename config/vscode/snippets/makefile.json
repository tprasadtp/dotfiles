{
  "Makefile-Base": {
  "prefix": [
    "makefilebase",
    "makefile"
    ],
  "body": [
    "SHELL := /bin/bash",
    "",
    ".DEFAULT_GOAL := help",
    "",
    "# Set install prefix if not set already",
    "INSTALL_PREFIX ?= $(HOME)",
    "",
    "# Get directory of makefile without trailing slash",
    "ROOT_DIR := $(patsubst %/, %, $(dir $(realpath $(firstword $(MAKEFILE_LIST)))))",
    "",
    ".PHONY: help",
    "help: ## This help dialog.",
    "\t@IFS=$$'\\n' ; \\",
    "\t\thelp_lines=(`fgrep -h \"##\" $(MAKEFILE_LIST) | fgrep -v fgrep | sed -e 's/\\$$//' | sed -e 's/##/:/'`); \\",
    "\t\tprintf \"%-30s %s\\n\" \"--------\" \"------------\" ; \\",
    "\t\tprintf \"%-30s %s\\n\" \" Target \" \"    Help \" ; \\",
    "\t\tprintf \"%-30s %s\\n\" \"--------\" \"------------\" ; \\",
    "\t\tfor help_line in $${help_lines[@]}; do \\",
    "\t\t\tIFS=$$':' ; \\",
    "\t\t\thelp_split=($$help_line) ; \\",
    "\t\t\thelp_command=`echo $${help_split[0]} | sed -e 's/^ *//' -e 's/ *$$//'` ; \\",
    "\t\t\thelp_info=`echo $${help_split[2]} | sed -e 's/^ *//' -e 's/ *$$//'` ; \\",
    "\t\t\tprintf \"\\033[92m\"; \\",
    "\t\t\tprintf \"%-30s %s\" $${help_command} ; \\",
    "\t\t\tprintf \"\\033[0m\"; \\",
    "\t\t\tprintf \"%s\\n\" $$help_info; \\",
    "\t\tdone",
    "",
    ""
  ],
  "description": "Makefile Base"
  }
}
